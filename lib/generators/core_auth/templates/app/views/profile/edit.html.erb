<%= render :partial => 'profile_header' %>
<%- form_for @user, :url => { :action => :update } do |f| -%>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %> (leave blank to keep current password)<br/>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<%- end -%>