<h1>New user</h1>
<%= form_for(@user) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= f.label :role %>
    <%= select_tag :role, options_from_collection_for_select(@roles, "id", "name") %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
<%= link_to 'Back', users_path %>