<%- content_for_locations -%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= controller.controller_path.capitalize + ": " + controller.action_name.capitalize %></title>
  <%= stylesheet_link_tag 'admin', :media => 'all' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
  <%- personal_area do -%>
    <%= link_to session[:name], profile_path %>, you're logged in.  <%= link_to 'Sign out', signout_path %>
  <%- end -%>
  <div id='notice'>
    <%= render :partial => 'shared/notice' %>
  </div>
<%= render :partial => 'dashboard/dashboard_header' %>
<%= yield :admin_location %>
<%= yield :system_location %>
<%= yield %>
<%# debug(session) %>
</body>
</html>